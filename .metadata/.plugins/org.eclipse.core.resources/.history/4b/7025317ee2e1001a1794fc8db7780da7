package com.app;

import org.springframework.context.support.AbstractApplicationContext;
import org.springframework.context.support.GenericXmlApplicationContext;

import com.frame.Service;
import com.vo.Item;
import com.vo.User;

public class App {

	public static void main(String[] args) {
		System.out.println("App Start ....");
		AbstractApplicationContext factory = new GenericXmlApplicationContext("com.xml");
		System.out.println("Spring Started....");

		// UserService
		User user = new User();
		Service<String, User> biz = (Service<String, User>) factory.getBean("uservice");
		biz.register(user);
		biz.remove("");
		biz.modify(user);
		biz.get("");
		biz.get();

		// UserDao
		Service<String, User> biz2 = (Service<String, User>) factory.getBean("udao");
		biz2.insert(user);
		biz2.delete("");
		biz2.update(user);

		System.out.println("----------------------------------");

		// ItemService
		Item item = new Item();
		Service<String, Item> biz3 = (Service<String, Item>) factory.getBean("iservice");
		biz3.register(item);
		biz3.remove("");
		biz3.modify(item);
		biz3.get("");
		biz3.get();

		factory.close();
		System.out.println("Spring End....");
		System.out.println("App End ....");

		System.out.println("----------------------------------");

	}

}
